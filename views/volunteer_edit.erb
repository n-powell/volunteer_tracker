<h1>Update the <%=@volunteer.name() %> name </h1>

<form action="/volunteers/<%= @volunteer.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="volunteer_name">Rename your volunteer:</label>
  <input id="volunteer_name" name="volunteer_name" type="text" required>

  <button type="submit">Update</button>
</form>


<form action="/volunteers/<%= @volunteer.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete Volunteer from their duty</button>
</form>
