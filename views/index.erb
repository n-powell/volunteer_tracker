<h1>Projects</h1>

<p>Create a project:</p>

<form action="/projects" method="post">
  <label for="project_name">Add project:</label>
  <input id="project_name" name="project_name" type="text">

  <button type="submit">Add</button>
</form>




<% if @projects.any?() %>
  <p>Select a project to view:</p>

  <ul>
    <% @projects.each do |project| %>
    <li><a href="/projects/<%= project.id() %>"><%= project.name() %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>There are no projects yet!</p>
<% end %>

<% if @volunteers.any?() %>
<p>Volunteers currently on projects:</p>

<ul>
  <% @volunteers.each do |volunteer| %>
  <li><%= volunteer.name() %></li>
  <% end %>
</ul>
<% else %>
<p>There are no volunteers yet!</p>
<% end %>
