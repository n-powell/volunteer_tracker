<h1>Projects</h1>

<p>Create a project:</p>

<form action="/lists" method="post">
  <label for="project_name">Add project:</label>
  <input id="project_name" name="project_name" type="text">

  <button type="submit">Add</button>
</form>

<p> Add volunteers to any project:</p>

<form action="/tasks" method="post">
  <label for="project_id">Select a Project</label>
  <select id='project_id' name='project_id' type='text'>
    <% @projects.each() do |project| %>
      <option value="<%= project.id()%>"> <%= project.name() %> </option>
    <% end %>
  </select>
</form>
